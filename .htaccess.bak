# Permitir acesso a todos os arquivos e diretórios
Options +FollowSymLinks
Options -Indexes

# Redirecionar apenas requisições que não sejam arquivos existentes para index.php (API)
RewriteEngine On
RewriteBase /Trabalho-Integrado/

# Não fazer rewrite se o arquivo existe
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Não fazer rewrite para arquivos na pasta web
RewriteCond %{REQUEST_URI} !^/Trabalho-Integrado/web/

# Redirecionar para API apenas se não for arquivo estático
RewriteRule ^(?!web/)(.*)$ index.php [QSA,L]
